<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_information_poster"
                android:layout_width="@dimen/information_image_width"
                android:layout_height="@dimen/information_image_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_medium"/>

            <TextView
                android:id="@+id/txt_original_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_information_poster"/>

            <TextView
                android:id="@+id/txt_original_language_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_original_title"
                android:layout_toRightOf="@+id/img_information_poster"/>

            <TextView
                android:id="@+id/txt_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_original_language_information"
                android:layout_toRightOf="@+id/img_information_poster"/>

            <TextView
                android:id="@+id/txt_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_genres"
                android:layout_toRightOf="@+id/img_information_poster"/>

            <TextView
                android:id="@+id/txt_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_popularity"
                android:layout_toRightOf="@+id/img_information_poster"/>

            <TextView
                android:id="@+id/txt_production_companies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_release_date"
                android:layout_toRightOf="@+id/img_information_poster"/>

            <TextView
                android:id="@+id/txt_production_countries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_production_companies"
                android:layout_toRightOf="@+id/img_information_poster"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_overview_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view_information"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/bar_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/view_error_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/search_error"/>
    </LinearLayout>
</LinearLayout>
    </ScrollView>